# AI Virtual Try-On Application - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# AI SERVICE CREDENTIALS
# =============================================================================

# KlingAI API Credentials (Primary AI Provider)
# Get these from: https://klingai.com/api-docs
KLING_ACCESS_KEY=your_access_key_here
KLING_SECRET_KEY=your_secret_key_here

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Authentication Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=tryon2024

# Server Configuration
HOST=127.0.0.1
PORT=8000
DEBUG=false

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# API Timeouts (in seconds)
API_TIMEOUT=300
PROCESSING_TIMEOUT=600

# Image Processing
MAX_IMAGE_SIZE_MB=10
MAX_IMAGE_DIMENSION=1024
IMAGE_QUALITY=85

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable detailed logging (true/false)
VERBOSE_LOGGING=false

# Enable development mode features
DEV_MODE=false

# =============================================================================
# NOTES
# =============================================================================

# 1. This application works without any API keys using fallback services
# 2. KlingAI credentials are optional but provide higher quality results
# 3. Default authentication credentials are provided for quick setup
# 4. Change credentials in production environments
# 5. Remove this file from version control if it contains sensitive data
